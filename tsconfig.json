{
    "compilerOptions": {
      "target": "ES5", 
      "module": "commonjs", 
      "outDir": "./dist",
      "strict": true, 
      "noImplicitAny": false,
      "moduleResolution": "node",
      "baseUrl": ".",                       
      "paths": {
         "mattermost/*": ["./src/mattermost/*"],
         "zendesk/*": ["./src/zendesk/*"],
         "src/*": ["./src/*"]
      },
      "typeRoots": [
        "./src"
      ], 
      "types": [
        "jest",
        "node"
      ], 
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": [
      "./src",
      "node_modules/@types"
    ]
}
